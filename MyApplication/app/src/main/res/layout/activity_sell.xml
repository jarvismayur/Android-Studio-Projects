<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sell">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/t1"
    android:text="@string/Heading"
    android:textAlignment="center"
    android:gravity="center"
    android:fontFamily="cursive"
    android:textSize="60sp"
    android:textColor="#fff"
    />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:id="@+id/scroll">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="#fff"
                android:id="@+id/spin"
                android:layout_centerHorizontal="true"/>
            <Button
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonChoose"
                android:layout_below="@+id/spin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50sp"
                android:textColor="#fff"
                android:background="@drawable/rounded"
                android:text="Choose"/>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="125sp"
                android:layout_height="125sp"
                android:layout_centerInParent="true"
                android:layout_below="@id/buttonChoose"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Book Name"
                android:textAlignment="center"
                android:layout_below="@id/imageView"
                android:id="@+id/edit_book_name"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Publisher"
                android:textAlignment="center"
                android:layout_below="@id/edit_book_name"
                android:id="@+id/edit_publisher"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="price"
                android:textAlignment="center"
                android:layout_below="@id/edit_publisher"
                android:id="@+id/edit_price"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Whatsapp"
                android:textAlignment="center"
                android:layout_below="@id/edit_price"
                android:id="@+id/edit_whatsapp"
                />

            <Button
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonUpload"
                android:layout_below="@+id/edit_whatsapp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50sp"
                android:textColor="#fff"
                android:background="@drawable/rounded"
                android:text="Send"/>
            <Button
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:id="@+id/dash"
                android:layout_below="@+id/buttonUpload"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50sp"
                android:textColor="#fff"
                android:background="@drawable/rounded"
                android:text="dashboard"/>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>